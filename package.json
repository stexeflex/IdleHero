{
  "name": "idle-hero",
  "version": "3.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "icons": "node scripts/generate-icons.js",
    "boss-hp:sim": "npx ts-node -P scripts/tsconfig.scripts.json scripts/boss-hp-table.script.ts",
    "level:sim": "npx ts-node -P scripts/tsconfig.scripts.json scripts/exp-level-sim.script.ts",
    "exp:sim": "npx ts-node -P scripts/tsconfig.scripts.json scripts/xp-dungeon-rewards.script.ts",
    "gold:sim": "npx ts-node -P scripts/tsconfig.scripts.json scripts/gold-dungeon-rewards.script.ts",
    "cleanup": "ng generate @angular/core:cleanup-unused-imports",
    "build:gh": "ng build --configuration production --base-href /IdleHero/ --output-path docs",
    "postbuild:gh": "cp docs/browser/index.html docs/browser/404.html && mv docs/browser/* docs/ && rm -rf docs/browser",
    "deploy": "npm run build:gh"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "eslint": "^10.0.2",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "3.7.4",
    "typescript": "~5.9.2"
  }
}
